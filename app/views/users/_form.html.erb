<%= form_for @user do |f| %>
    <%= f.label :firstname, "First Name" %>
    <%= f.text_field name="user[firstname]" %>

    <%= f.label :lastname, "Last Name" %>
    <%= f.text_field name="user[lastname]" %>

    <%= f.label :username %>
    <%= f.text_field name="user[username]" %>

    <%= f.label :email %>
    <%= f.text_field name="user[email]" %>

    <%= f.label :password %>
    <%= f.text_field name="user[password_digest]" %>

    <%= f.label :password_confirmation %>
    <%= f.text_field name="user[password_confirmation]" %>

    <%= f.submit "Sign Up" %>
<% end %>