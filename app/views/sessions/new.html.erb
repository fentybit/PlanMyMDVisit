<h1>Log In page</h1>

<% flash.each do |type, msg| %>
    <i><%= msg %></i>
<% end %>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    <%= label_tag :username %>
    <%= text_field_tag name="user[username]" %>

    <%= label_tag :password %>
    <%= password_field_tag name="user[password]" %>

    <%= submit_tag "Log In" %>
<% end %>